{{> navEmpleado}}

<section class="home-section pt-4 mt-4">

<div class="container mt-2">

    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
        <li class="nav-item">
             <a class="nav-link active" href="/Empleado/pedidoEmp">INVENTARIO</a>
        </li>
    </ul>

    {{#if completo}}
    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto">

                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{completo}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    {{#if mensaje}}
    <div class="container">
        <div class="row">
            <div class="mx-auto">

                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class='bx bx-error bx-tada'></i>
                    {{mensaje}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    {{#if warning}}
    <div class="container">
        <div class="row">
            <div class="mx-auto">

                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fa-solid fa-boxes-stacked fa-lg fa-bounce"></i>
                {{warning}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

            <div class="row">
                <div class="col">
                    <a href="/Empleado/pedidoEmp" class="btn btn-outline-dark btn-sm mb-4">
                        <i class='bx bx-arrow-back'></i>
                        Regresar
                    </a>
                </div>
                <div class="col">
                    <a href="/Empleado/pedidoEmp/listaHPrea" class="btn btn-outline-dark mb-4">
                        <i class='bx bxs-book-open'></i>
                        Ver pedidos realizados
                    </a>
                </div>
            </div>

        <div class="justify-content-center row">
            <div class="table-responsive-xl">
                <table class="table table-responsive table-striped table-borderedtable-hover">
                    <thead class="thead-dark">
                        <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripci√≥n</th>
                        <th scope="col">Medida</th>
                        <!--<th scope="col">Cantidad</th>-->
                        <th scope="col">Existencias</th>
                        <th colspan="2">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each msp}}
                        <tr>
                        <th class="text-center" scope="row"> {{ ID_materiaPrima }} </th>
                        <td>{{Nom_materiaPrima}}</td>
                        <td>{{Desc_materiaPrima}}</td>
                        <td class="text-center">{{Medida_materiaPrima}}</td>
                        <!--<td class="text-center">{{Cant_materiaPrima}}</td>-->
                        <td class="text-center">{{stock}}</td>
                        <td>
                            <!--
                            <a href="/Empleado/pedidoEmp/addPH/ {{ID_materiaPrima}}" class="btn btn-outline-success btn-sm">
                                <i class='bx bxs-plus-circle' ></i>
                                Realizar pedido
                            </a>
                            -->
                            <button onclick="ReaPedidoEmp({{ID_materiaPrima}})" class="btn btn-outline-success btn-sm">
                                <i class='bx bxs-plus-circle' ></i>
                                Realizar pedido
                            </button>
                        </td>
                        </tr>
                        {{else}}
                        <div class="mx-auto pb-4">
                            <div class="card card-body text-center">
                                <p>No se encuentra materia prima en el inventario principal</p>
                            </div>
                        </div>
                        {{/each}}
                    </tbody>
                </table>
            <caption class="pl-2 justify-content-center">Lista de materia prima disponible del inventario principal</caption>
            </div>
        </div>
    </div>

</section>