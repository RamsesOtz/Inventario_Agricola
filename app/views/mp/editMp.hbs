        <div class="row pt-4 mt-4">
            <div class="col-md-8 mx-auto  pb-4 mb-4">

                <a href="/Administrador/mp" class="btn btn-outline-dark btn-sm mb-4">
                    <i class='bx bx-arrow-back'></i>
                    Regresar
                    </a>

                <div class="card">
                    <div class="card-header text-center">
                        EDITAR MATERIA PRIMA
                    </div>
                    <div class="card-body">
                        <form action="/Administrador/mp/editMp/{{ mp.ID_materiaPrima }}" method="POST">
                             <div class="form-group">
                                <label>ID: </label>
                                <input type="number" disabled value="{{ mp.ID_materiaPrima }}" class="form-control" name="ID_materiaPrima">
                            </div>
                            <div class="form-group">
                                <label>Nombre de materia prima: </label>
                                <input type="text" value="{{ mp.Nom_materiaPrima }}" class="form-control" name="Nom_materiaPrima" autofocus>
                            </div>
                            <div class="form-group">
                                <label>Descripci√≥n de materia prima: </label>
                                <textarea name="Desc_materiaPrima" rows="2" class="form-control"> {{ mp.Desc_materiaPrima }} </textarea>
                            </div>
                            <div class="form-group">
                                <label>Tipo de Medidas<b id="txtT"></b></label>
                                <!--<input type="number" value="{{ mp.Medida_materiaPrima }}" class="form-control" name="Medida_materiaPrima">-->
                                <select onchange="getSelectValueT()" class="custom-select" id="listT">
                                        <option value=""> Selecciona el tipo de medida...</option>
                                        <option value="pieza">Pieza</option>
                                        <option value="area">Area</option><!--Kilometros, Metros, Millas, Yarda, Pies: CUADRADOS-->
                                        <option value="longitud">Longitud</option><!--Kilometro, Metro, Centimetro, Milimetro, etc-->
                                        <option value="masa">Masa</option><!--Tonelada, Kilogramo, Gramo, Miligramo, etc-->
                                        <option value="volumen">Volumen</option><!--Litro, Mililitro-->
                                </select>
                            </div>
                            <div class="form-group" id="formM">
                                <label>Medida</label>
                                <!--<input type="number" value="{{ mp.Medida_materiaPrima }}" class="form-control" name="Medida_materiaPrima">-->
                                <input disabled class="form-control" id="inputBlock" placeholder="Selecciona El tipo de medida">
                            </div>
                            <div class="form-group">
                                <label>Cantidad: </label>
                                <input type="number" value="{{ mp.Cant_materiaPrima }}" class="form-control" name="Cant_materiaPrima" id="cant">
                            </div>
                            <!--QUITAR-->
                            <div class="form-group">
                                <label>Stock: </label>
                                <input type="number" value="{{ mp.stock }}" class="form-control" name="stock" id="copycant">
                            </div>
                            <!--QUITAR-->
                            <div class="form-group">
                                <button class="btn btn-dark btn-block" id="btnGuardar">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

