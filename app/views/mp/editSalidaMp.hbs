            <div class="row pt-4 mt-4">
                <div class="col-md-8 mx-auto  pb-4 mb-4">

                    <a href="/Administrador/mp/listaSalidaMp" class="btn btn-outline-dark btn-sm mb-4">
                        <i class='bx bx-arrow-back'></i>
                        Regresar
                        </a>

                    <div class="card mt-2">
                        <div class="card-header text-center">
                            EDITAR REGISTRO SALIDA DE MATERIA PRIMA
                        </div>
                        <div class="card-body">
                            <form action="/Administrador/mp/editSalidaMp/{{ mps.ID_salidaMp }}" method="POST">
                                <div class="form-group">
                                    <label>ID: </label>
                                    <input type="number" class="form-control" name="ID_salidaMp" value="{{ mps.ID_salidaMp}}" placeholder="Nombre de materia prima...." disabled>
                                </div>
                                <div class="form-group">
                                    <label>Nombre de materia prima: </label>
                                    <input type="text" class="form-control" name="Nom_mp" value="{{ mps.Nom_mp }}" placeholder="Nombre de materia prima...." autofocus>
                                </div>
                                <div class="form-group">
                                    <label>Tipo de Medidas</label>
                                    <select onchange="getSelectValueTMS()" class="custom-select" id="listTMS">
                                            <option value=""> Selecciona el tipo de medida...</option>
                                            <option value="pieza">Pieza</option>
                                            <option value="area">Area</option><!--Kilometros, Metros, Millas, Yarda, Pies: CUADRADOS-->
                                            <option value="longitud">Longitud</option><!--Kilometro, Metro, Centimetro, Milimetro, etc-->
                                            <option value="masa">Masa</option><!--Tonelada, Kilogramo, Gramo, Miligramo, etc-->
                                            <option value="volumen">Volumen</option><!--Litro, Mililitro-->
                                    </select>
                                </div>
                                <div class="form-group" id="formMS">
                                    <label>Medida</label>
                                    <input disabled class="form-control" id="inputBlock" placeholder="Selecciona El tipo de medida">
                                </div>
                                <div class="form-group">
                                    <label>Cantidad: </label>
                                    <input type="number" class="form-control" name="Cant_mp" value="{{ mps.Cant_mp }}" placeholder="Cantidad de materia prima....">
                                </div>
                                <div class="form-group">
                                    <label>Solicitante: </label>
                                    <input type="text" class="form-control" name="NomUs_solicito" value="{{ mps.NomUs_solicito }}" placeholder="Nombre del solicitante....">
                                </div>
                                <div class="form-group">
                                    <label>Autoriz√≥: </label>
                                    <input type="text" class="form-control" name="NomUs_autorizo" value="{{ mps.NomUs_autorizo }}" placeholder="Nombre de quien autorizo salida....">
                                </div>
                                <div class="form-group">
                                    <label>Traslado: </label>
                                    <input type="text" class="form-control" name="NomUs_autorizo" value="{{ mps.NomUs_autorizo }}" placeholder="Nombre de quien llevo materia prima....">
                                </div>
                                <!--<div class="form-group">
                                    <label>Fecha de entrega: </label>
                                    <input type="text" class="form-control" name="Date_Hr" placeholder="Nombre de materia prima....">
                                </div>-->
                                <div class="form-group">
                                    <button class="btn btn-dark btn-block">Guardar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
</section>