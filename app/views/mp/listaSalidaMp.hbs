{{> navAdministrador}}

<section class="home-section pt-4 mt-4">

<div class="container mt-2">

    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
        <li class="nav-item">
             <a class="nav-link" href="/Administrador/usuarios">USUARIOS</a>
        </li>
        <!--<li class="nav-item">
            <a class="nav-link" href="/Administrador/roles">ROLES</a>
        </li>-->
        <!--<li class="nav-item">
            <a class="nav-link" href="/Administrador/privilegios">PRIVILEGIOS</a>
        </li>-->
        <li class="nav-item">
            <a class="nav-link" href="/Administrador/recintos">RECINTOS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="#">MATERIA PRIMA</a>
        </li>
    </ul>

    {{#if completo}}
    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto">

                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{completo}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

            <a href="/Administrador/mp" class="btn btn-outline-dark btn-sm mb-4">
                <i class='bx bx-arrow-back'></i>
                Regresar
            </a>

        <div class="justify-content-center row">
            <div class="table-responsive-xl">
                <table class="table table-responsive table-striped table-borderedtable-hover">
                    <thead class="thead-dark">
                        <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Medida</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Solicitante</th>
                        <th scope="col">Autorizo</th>
                        <th scope="col">Traslado</th>
                        <th scope="col">Estado</th>
                        <th scope="col"></th>
                        <th scope="col">Fecha de salida</th>
                        <th colspan="2">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each mpss}}
                        <tr>
                        <th class="text-center" scope="row"> {{ ID_salidaMp }} </th>
                        <td>{{Nom_mp}}</td>
                        <td class="text-center">{{Medida_mp}}</td>
                        <td class="text-center">{{Cant_mp}}</td>
                        <td class="text-center">{{NomUs_solicito}}</td>
                        <td class="text-center">{{NomUs_autorizo}}</td>
                        <td class="text-center">{{NomUs_llevo}}</td>
                        <td class="text-center">{{Estatus_mpS}}</td>
                        <td class="text-center"><i class='bx bxs-info-circle' data-toggle="tooltip" data-html="true" title="{{Desc_EstatusMPS}}"></i></td>
                        <td class="text-center">{{timeago Date_Hr}}</td>
                        <td>
                            <button onclick="popUpDelSalidaMp({{ ID_salidaMp }})" class="btn btn-outline-danger btn-sm">
                                <ion-icon name="trash-outline"></ion-icon>
                                Eliminar
                            </button>
                        </td>
                        </tr>
                        {{else}}
                        <div class="col-md-8 mx-auto pb-4">
                            <div class="card card-body text-center">
                                <p>No hay registro de salidas de materia prima</p>
                            </div>
                        </div>
                        {{/each}}
                    </tbody>
                </table>
                <caption class="pl-2 justify-content-center">Registro de salidas de materia prima</caption>
            </div>
        </div>
    </div>

</section>
