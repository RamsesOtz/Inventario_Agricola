
{{> navEmpleado}}

<section class="home-section pt-4 mt-4">

    {{#if completo}}
    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto">

                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{completo}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

        <div class="row pt-4 mt-4">
            <div class="col-md-8 mx-auto  pb-4 mb-4">

                <a href="/Empleado/registroH" class="btn btn-outline-dark btn-sm mb-4">
                    <i class='bx bx-arrow-back'></i>
                    Regresar
                </a>

                <div class="card mt-2">
                    <div class="card-header text-center">
                        MODIFICAR REGISTRO DE MATERIA PRIMA
                    </div>
                    <div class="card-body">
                        <form action="/Empleado/registroH/editRegistroH/{{ ID_mpH }}" method="POST">
                            <div class="form-group">
                                <label>ID: </label>
                                <input type="number" class="form-control" name="ID_mpH" value="{{ producto.ID_mpH }}" disabled>
                            </div>
                            <div class="form-group">
                                <label>Nombre de materia prima: </label>
                                <input type="text" class="form-control" name="Nom_mpH" value="{{ producto.Nom_mpH }}" autofocus>
                            </div>
                            <div class="form-group">
                                <label>Nombre de materia prima: </label>
                                <input type="text" class="form-control" name="Desc_mpH" value="{{ producto.Desc_mpH }}" autofocus>
                            </div>
                            <div class="form-group">
                                <label>Tipo de Medidas</label>
                                <!--<input type="number" value="{{ mp.Medida_materiaPrima }}" class="form-control" name="Medida_materiaPrima">-->
                                <select onchange="getSelectValueTR()" class="custom-select" id="listTR">
                                    <option value=""> Selecciona el tipo de medida...</option>
                                    <option value="pieza">Pieza</option>
                                    <option value="area">Area</option><!--Kilometros, Metros, Millas, Yarda, Pies: CUADRADOS-->
                                    <option value="longitud">Longitud</option><!--Kilometro, Metro, Centimetro, Milimetro, etc-->
                                    <option value="masa">Masa</option><!--Tonelada, Kilogramo, Gramo, Miligramo, etc-->
                                    <option value="volumen">Volumen</option><!--Litro, Mililitro-->
                                </select>
                            </div>
                            <div class="form-group" id="formMR">
                                <label>Medida</label>
                                <input disabled class="form-control" id="inputBlock" placeholder="Selecciona El tipo de medida">
                            </div>
                            <div class="form-group">
                                <label>Cantidad: </label>
                                <input type="number" class="form-control" name="Cant_mpH" value="{{ producto.Cant_mpH }}" id="cant">
                            </div>
                            <!--QUITAR-->
                            <div class="form-group">
                                <label>Existencias: </label>
                                <input type="number" class="form-control" name="StockH" value="{{ producto.StockH }}" id="copycant">
                            </div>
                            <!--QUITAR-->
                            <div class="form-group">
                                <button class="btn btn-dark btn-block">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </div>

</section>