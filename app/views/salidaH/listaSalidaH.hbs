{{> navCoordinador}}

<section class="home-section pt-4 mt-4">

<div class="container mt-2">

    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
        <li class="nav-item">
             <a class="nav-link" href="/Coordinador/pedidoCoord">INVENTARIO</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Coordinador/entradaH">ENTRADAS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="/Coordinador/salidaH">SALIDAS</a>
        </li>
    </ul>

    {{#if completo}}
    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto">

                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{completo}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

        <div class="row">
            <div class="col">
                <a href="/Coordinador/salidaH/addSalidaH" class="btn btn-outline-success mb-4">
                    <i class='bx bxs-plus-circle'></i>
                    Registrar Salida
                </a> 
            </div>
        </div>

<div class="justify-content-center row">
    <div class="table-responsive-xl">
        <table class="table table-responsive table-striped table-borderedtable-hover">
            <thead class="thead-dark">
                <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Medida</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Solicito</th>
                <th scope="col">Autorizo</th>
                <th scope="col">LLevo</th>
                <th scope="col">Se entrego</th>
                <th colspan="2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each salidasH}}
                <tr>
                <th scope="row"> {{ ID_salidaH }} </th>
                <td>{{Nom_mpHS}}</td>
                <td>{{Medida_mpHS}}</td>
                <td>{{Cant_mpHS}}</td>
                <td>{{NomUs_solicito}}</td>
                <td>{{NomUs_autorizo}}</td>
                <td>{{NomUs_llevo}}</td>
                <td>{{timeago Date_HrS}}</td>
                <td>
                    <a href="/Coordinador/salidaH/editSalidaH/{{ ID_salidaH }}" class="btn btn-outline-primary btn-sm">
                        <i class='bx bx-edit-alt'></i>
                        Editar
                    </a>
                </td>
                <td>
                    <button class="btn btn-outline-danger btn-sm" onclick="popUpDelSH({{ID_salidaH}})">
                        <ion-icon name="trash-outline"></ion-icon>
                        Eliminar
                    </button>
                </td>
                </tr>
                {{else}}
                <div class="col-md-8 mx-auto pb-4">
                    <div class="card card-body text-center">
                        <p>No hay registro de salidas de materia prima</p>
                    </div>
                </div>
                {{/each}}
            </tbody>
            </table>
                <caption class="pl-2 justify-content-center">Registro de salidas de materia prima</caption>
        </div>
    </div>
</div>


</div>

</section>
