        <li class="nav-item">
            <a class="nav-link" href="/privilegios">PRIVILEGIOS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="#">RECINTOS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/mp">MATERIA PRIMA</a>
        </li>
    </ul>

    {{#if completo}}
    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto">

                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{completo}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

        <div class="row pt-4 mt-4">
            <div class="col-md-8 mx-auto  pb-4 mb-4">

                <a href="/recintos" class="btn btn-outline-dark btn-sm mb-4">
                    <i class='bx bx-arrow-back'></i>
                    Regresar
                    </a>

                <div class="card">
                    <div class="card-header text-center">
                        EDITAR RECINTO
                    </div>
                    <div class="card-body">
                        <form action="/recintos/editRecintos/{{ recinto.ID_Recinto }}" method="POST">
                             <div class="form-group">
                                <label>ID: </label>
                                <input type="text" disabled value="{{ recinto.ID_Recinto }}" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Nombre del recinto: </label>
                                <input type="text" value="{{ recinto.Recinto }}" class="form-control" name="Recinto" autofocus>
                            </div>
                             <div class="form-group">
                                <label>Ubicacion del recinto: </label>
                                <input type="text" value="{{ recinto.Ubicacion }}" class="form-control" name="Ubicacion" autofocus>
                            </div>
                             <div class="form-group">
                                <label>Nombre del encargado: </label>
                                <input type="text" value="{{ recinto.Npatron }}" class="form-control" name="Npatron" autofocus>
                            </div>
                             <div class="form-group">
                                <label>Apellido del encargado: </label>
                                <input type="text" value="{{ recinto.Apatron }}" class="form-control" name="Apatron" autofocus>
                            </div>
                             <div class="form-group">
                                <label>Nombre del usuario: </label>
                                <input type="text" value="{{ recinto.usuario }}" class="form-control" name="usuario" autofocus>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-dark btn-block">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>