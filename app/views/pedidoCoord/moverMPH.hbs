{{> navCoordinador}}

<section class="home-section pt-4 mt-4">

<div class="container mt-2">

    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
        <li class="nav-item">
             <a class="nav-link active" href="/Coordinador/pedidoCoord">INVENTARIO</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Coordinador/entradaH">ENTRADAS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Coordinador/salidaH">SALIDAS</a>
        </li>
    </ul>

    {{#if mensaje}}
    <div class="container">
        <div class="row">
            <div class="mx-auto">

                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class='bx bx-error bx-tada'></i>
                    {{mensaje}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    {{#if warning}}
    <div class="container">
        <div class="row">
            <div class="mx-auto">

                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fa-solid fa-boxes-stacked fa-lg fa-bounce"></i>
                {{warning}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

        <div class="row">
            <div class="col-md-8 mx-auto pb-4 mb-4">

                <a href="/Coordinador/pedidoCoord" class="btn btn-outline-dark btn-sm mb-4">
                    <i class='bx bx-arrow-back'></i>
                    Regresar
                </a>

                <div class="card mt-2">
                    <div class="card-header text-center">
                        MOVIMIENTO DE MATERIA PRIMA
                    </div>
                    <div class="card-body">
                        <form action="/Coordinador/pedidoCoord/moverMPH/{{ inventarioH.ID_mpH }}" method="POST">
                            <div class="form-group">
                                <label>Nombre de materia prima: </label>
                                <input type="text" class="form-control" name="Nom_mpH" value="{{ inventarioH.Nom_mpH }}" readonly>
                            </div>
                            <div class="form-group">
                                <label>Descripci√≥n de materia prima: </label>
                                <textarea name="Desc_mpH" rows="2" class="form-control" readonly>{{ inventarioH.Desc_mpH }}</textarea>
                            </div>
                            <div class="form-group">
                                <label>Medida</label>
                                <input class="form-control" name="Medida_mpH" value="{{ inventarioH.Medida_mpH }}" readonly>
                            </div>
                            <label><u>Existencias disponibles:</u> <b>{{ inventarioH.StockH }} {{inventarioH.Medida_mpH}}</b></label>
                            <div class="form-group">
                                <label>Cantidad a mover: </label>
                                <input type="number" min="0" max="{{ inventarioH.StockH }}" value="0" class="form-control" name="Cant_mpH" oninput="this.value = Math.abs(this.value)" id="cant">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-dark btn-block">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </div>

</section>