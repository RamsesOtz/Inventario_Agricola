{{> navCoordinador}}

<section class="home-section pt-4 mt-4">

<div class="container mt-2">

    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
        <li class="nav-item">
             <a class="nav-link active" href="/Coordinador/pedidoCoord">INVENTARIO</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Coordinador/entradaH">ENTRADAS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Coordinador/salidaH">SALIDAS</a>
        </li>
    </ul>

    {{#if completo}}
    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto">

                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{completo}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    {{#if mensaje}}
    <div class="container">
        <div class="row">
            <div class="mx-auto">

                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class='bx bx-error bx-tada'></i>
                    {{mensaje}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    {{#if warning}}
    <div class="container">
        <div class="row">
            <div class="mx-auto">

                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fa-solid fa-boxes-stacked fa-lg fa-bounce"></i>
                {{warning}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

        <div class="row pt-4 mt-4">
            <div class="col-md-8 mx-auto  pb-4 mb-4">

                <a href="/Coordinador/pedidoCoord/listaPPL" class="btn btn-outline-dark btn-sm mb-4">
                    <i class='bx bx-arrow-back'></i>
                    Regresar
                </a>

                <div class="card">
                    <div class="card-header text-center">
                        DENEGAR PETICION
                    </div>
                    <div class="card-body">
                        <form action="/Coordinador/pedidoCoord/denegarPCoord/{{ pedido.ID_pedidoH }}" method="POST">
                             <div class="form-group">
                                <label>ID del pedido: </label>
                                <input type="text" value="{{ pedido.ID_pedidoH }}" class="form-control" disabled>
                            </div>
                            <div class="form-group">
                                <label>Pedido: </label>
                                <input type="text" value="{{ pedido.pedidoH }}" class="form-control" name="pedidoH" readonly>
                            </div>
                            <div class="form-group">
                                <label>Descripción del pedido: </label>
                                <textarea name="Desc_pedido" rows="2" class="form-control" readonly>{{ pedido.Desc_pedido }}</textarea>
                            </div>
                             <div class="form-group">
                                <label>Medida: </label>
                                <input type="text" value="{{ pedido.MedidaHP }}" class="form-control" name="MedidaHP" readonly>
                            </div>
                            <div class="form-group">
                                <label>Cantidad requerida: </label>
                                <input type="number" value="{{ pedido.CantHP }}" class="form-control" name="CantHP" readonly>
                            </div>
                            <div class="form-group">
                                <label>Observación: </label>
                                <textarea rows="2" maxlength="500" class="form-control" name="Desc_EstatusHP" placeholder="Escribe el motivo por el cual se denego el pedido..."></textarea>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-dark btn-block">Confirmar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
