        <div class="row pt-4 mt-4">
            <div class="col-md-8 mx-auto  pb-4 mb-4">

                <a href="/entradaH" class="btn btn-outline-dark btn-sm mb-4">
                    <i class='bx bx-arrow-back'></i>
                    Regresar
                    </a>

                <div class="card">
                    <div class="card-header text-center">
                        REGISTRAR ENTREGA
                    </div>
                    <div class="card-body">
                        <form action="/entradaH/addEntradaH" method="POST">
                            <div class="form-group">
                                <label>Nombre de materia prima: </label>
                                <input type="text" class="form-control" name="Nom_mpHE" autofocus>
                            </div>
                            <div class="form-group">
                                <label>Descripci√≥n de materia prima: </label>
                                <textarea name="Desc_mpHE" rows="2" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Tipo de Medidas</label>
                                <!--<input type="number" value="{{ mp.Medida_materiaPrima }}" class="form-control" name="Medida_materiaPrima">-->
                                <select onchange="getSelectValueTE()" class="custom-select" id="listTE">
                                        <option value=""> Selecciona el tipo de medida...</option>
                                        <option value="area">Area</option><!--Kilometros, Metros, Millas, Yarda, Pies: CUADRADOS-->
                                        <option value="longitud">Longitud</option><!--Kilometro, Metro, Centimetro, Milimetro, etc-->
                                        <option value="masa">Masa</option><!--Tonelada, Kilogramo, Gramo, Miligramo, etc-->
                                        <option value="volumen">Volumen</option><!--Litro, Mililitro-->
                                </select>
                            </div>
                            <div class="form-group" id="formME">
                                <label>Medida</label>
                                <!--<input type="number" value="{{ mp.Medida_materiaPrima }}" class="form-control" name="Medida_materiaPrima">-->
                                <input disabled class="form-control" id="inputBlock" placeholder="Selecciona El tipo de medida">
                            </div>
                            <div class="form-group">
                                <label>Cantidad: </label>
                                <input type="number" class="form-control" name="Cant_mpH">
                            </div>
                            <!--QUITAR-->
                            <div class="form-group">
                                <label>Stock: </label>
                                <input type="number" class="form-control" name="StockH">
                            </div>
                            <div class="form-group">
                                <label>Estatus: </label>
                                <input type="number" class="form-control" name="EstatusH">
                            </div>
                            <div class="form-group">
                                <label>ID Entrada</label>
                                <select class="custom-select" name="ID_entradaH">
                                        <option value=""> Selecciona el tipo de medida...</option>
                                        {{#each entradasH}}
                                        <option value="{{ entradasH.ID_entradaH }}">{{entradasH.ID_entrada }}</option>
                                        {{/each}}
                                </select>
                            </div>
                            <div class="form-group">
                                <label>ID Salida</label>
                                <select class="custom-select" name="ID_salidaH">
                                        <option value=""> Selecciona el tipo de medida...</option>
                                        {{#each entradasH}}
                                        <option value="{{ entradasH.ID_salidaH }}">{{entradasH.ID_salida }}</option>
                                        {{/each}}
                                </select>
                            </div>
                            <!--QUITAR-->
                            <div class="form-group">
                                <button class="btn btn-dark btn-block">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>