        <div class="row pt-4 mt-4">
            <div class="col-md-8 mx-auto">

                <a href="/Administrador/privilegios" class="btn btn-outline-dark btn-sm mb-4">
                    <i class='bx bx-arrow-back'></i>
                    Regresar
                    </a>

                <div class="card">
                    <div class="card-header text-center">
                        EDITAR PRIVILEGIOS
                    </div>
                    <div class="card-body">
                        <form action="/Administrador/privilegios/editPrivilegios/{{ privilegio.ID_priv }}" method="POST">
                             <div class="form-group">
                                <label>ID: </label>
                                <input type="text" disabled value="{{ privilegio.ID_priv }}" class="form-control" name="ID_priv">
                            </div>
                            <div class="form-group">
                                <label>Nombre del privilegio: </label>
                                <input type="text" value="{{ privilegio.NomPriv }}" class="form-control" name="NomPriv" placeholder="Nombre del privilegio...." autofocus>
                            </div>
                            <div class="form-group">
                                <label>Descripci√≥n del privilegio: </label>
                                <textarea name="DescPriv" rows="2" class="form-control" placeholder="Descripcion...."> {{ privilegio.DescPriv }} </textarea>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-dark btn-block">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

