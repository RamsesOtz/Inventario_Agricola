{{> navAdministrador}}

<section class="home-section pt-4 mt-4">

<div class="container mt-2">

    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
        <li class="nav-item">
             <a class="nav-link" href="/Administrador/usuarios">USUARIOS</a>
        </li>
        <!--<li class="nav-item">
            <a class="nav-link" href="/Administrador/roles">ROLES</a>
        </li>-->
        <!--<li class="nav-item">
            <a class="nav-link" href="/Administrador/privilegios">PRIVILEGIOS</a>
        </li>-->
        <li class="nav-item">
            <a class="nav-link" href="/Administrador/recintos">RECINTOS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="#">MATERIA PRIMA</a>
        </li>
    </ul>

    {{#if completo}}
    <div class="container">
        <div class="row">
            <div class="mx-auto">

                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class='bx bxs-check-circle bx-tada' ></i>
                    {{completo}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    {{#if mensaje}}
    <div class="container">
        <div class="row">
            <div class="mx-auto">

                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class='bx bx-error bx-tada'></i>
                    {{mensaje}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    {{#if warning}}
    <div class="container">
        <div class="row">
            <div class="mx-auto">

                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fa-solid fa-boxes-stacked fa-lg fa-bounce"></i>
                {{warning}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

        <div class="row pl-4">
            <a href="/Administrador/mp" class="btn btn-outline-dark btn-sm mb-4">
                <i class='bx bx-arrow-back'></i>
                Regresar
            </a>
        </div>

        <div class="justify-content-center row">
            <div class="table-responsive-xl">
                <table class="table table-responsive table-striped table-borderedtable-hover">
                    <thead class="thead-dark">
                        <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Pedido</th>
                        <th scope="col">Medida</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Existencia</th>
                        <!--<th scope="col"></th>-->
                        <th scope="col">Usuario</th>
                        <th scope="col">Recinto</th>
                        <!--<th scope="col">ID_Recinto</th>-->
                        <th scope="col">Estado</th>
                        <th scope="col">Pedido realizado</th>
                        <th colspan="2">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each msp}}
                        <tr>
                        <th class="text-center" scope="row"> {{ ID_pedidoH }} </th>
                        <td>{{pedidoH}}</td>
                        <td class="text-center">{{MedidaHP}}</td>
                        <td class="text-center">{{CantHP}}</td>
                        <td class="text-center">{{StockHP}}</td>
                        <!--<td>{{Desc_EstatusHP}}<i class='bx bxs-info-circle bx-tada'></i></td>-->
                        <td>{{UsuarioHP}}</td><!---->
                        <td>{{RecintoHP}}</td><!---->
                        <!--<td>{{ID_Recinto}}</td>-->
                        <td>{{EstatusHP}}</td>
                        <td>{{timeago Date_Rea }}</td><!---->
                        <td>

                            <button onclick="popUpConfirmPedido({{ ID_pedidoH }})" class="btn btn-outline-success btn-sm" id="{{ ID_pedidoH }}">
                                <i class='bx bxs-check-circle'></i>
                                Confirmar
                            </button>
                            
                        </td>
                        <td>
                            <button onclick="popUpDenPedido({{ ID_pedidoH }})" class="btn btn-outline-danger btn-sm" id="{{ ID_pedidoH }}">
                                <i class='bx bxs-x-circle'></i>
                                Denegar
                            </button>
                        </td>
                        </tr>
                        {{else}}
                        <div class="col-md-4 mx-auto pb-4">
                            <div class="card card-body text-center">
                                <p>No se encontraron pedidos</p>
                            </div>
                        </div>
                        {{/each}}
                    </tbody>
                </table>
            <caption class="pl-2 justify-content-center">Lista de pedidos</caption>
            </div>
        </div>
    </div>

</section>

