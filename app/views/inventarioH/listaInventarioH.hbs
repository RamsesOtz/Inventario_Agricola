{{> navCoordinador}}

<section class="home-section pt-4 mt-4">

<div class="container mt-2">

    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
        <li class="nav-item">
             <a class="nav-link active" href="/Coordinador/inventarioH">INVENTARIO</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Coordinador/entradaH">ENTRADAS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Coordinador/salidaH">SALIDAS</a>
        </li>
    </ul>

    {{#if completo}}
    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto">

                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{completo}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    {{#if mensaje}}
    <div class="container">
        <div class="row">
            <div class="mx-auto">

                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class='bx bx-error bx-tada'></i>
                    {{mensaje}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    {{#if warning}}
    <div class="container">
        <div class="row">
            <div class="mx-auto">

                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fa-solid fa-boxes-stacked fa-lg fa-bounce"></i>
                {{warning}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    

<div class="row">
    <div class="col">
        <a href="/Coordinador/inventarioH/listaPedidoHRea" class="btn btn-outline-dark mb-4">
            <i class='bx bxs-book-open' ></i>
            Mis pedidos
        </a>
    </div>
</div>

        
<div class="justify-content-center row">
    <div class="table-responsive-xl">
        <table class="table table-responsive table-striped table-borderedtable-hover">
            <thead class="thead-dark">
                <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripci√≥n</th>
                <th scope="col">Medida</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Existencias</th>
                <!--<th scope="col">Estatus</th>-->
                <th colspan="2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each inventariosH}}
                <tr>
                <th scope="row"> {{ ID_mpH }} </th>
                <td>{{Nom_mpH}}</td>
                <td>{{Desc_mpH}}</td>
                <td>{{Medida_mpH}}</td>
                <td>{{Cant_mpH}}</td>
                <td>{{StockH}}</td>
                <!--<td>{{EstatusH}}</td>-->
                <td>
                    <a href="/Coordinador/inventarioH/moverMPH/{{ ID_mpH }}" class="btn btn-outline-primary btn-sm">
                        <ion-icon name="move-outline"></ion-icon>
                        Mover
                    </a>
                </td>
                <td>
                    <button class="btn btn-outline-danger btn-sm" onclick="popUpRegresar({{ID_mpH}})">
                        <i class='bx bx-redo bx-flip-horizontal'></i>
                        Regresar
                    </button>
                </td>
                </td>
                </tr>
                {{else}}
                <div class="col-md-12 mx-auto pb-4">
                    <div class="card card-body text-center">
                        <p>No se encuentra materia prima en el inventario local</p>
                    </div>
                </div>
                {{/each}}
            </tbody>
            </table>
            <caption class="pl-2 justify-content-center">Lista de materia prima en inventario local</caption>
        </div>
    </div>
</div>


</div>

</section>

