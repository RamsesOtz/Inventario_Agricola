{{> navAdministrador}}

<section class="home-section pt-4 mt-4">

<div class="container mt-2">

    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
        <li class="nav-item">
             <a class="nav-link active" href="#">INVENTARIO</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Coordinador/entradaH">ENTRADAS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Coordinador/salidaH">SALIDAS</a>
        </li>
    </ul>


    {{#if completo}}
    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto">

                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{completo}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

        <div class="row pt-4 mt-4">
            <div class="col-md-8 mx-auto  pb-4 mb-4">

                <a href="/Coordinador/inventarioH" class="btn btn-outline-dark btn-sm mb-4">
                    <i class='bx bx-arrow-back'></i>
                    Regresar
                    </a>

                <div class="card">
                    <div class="card-header text-center">
                        EDITAR MATERIA PRIMA
                    </div>
                    <div class="card-body">
                        <form action="/Coordinador/inventarioH/editInventarioH/{{ inventarioH.ID_mpH }}" method="POST">
                             <div class="form-group">
                                <label>ID Materia Prima: </label>
                                <input type="number" disabled value="{{ inventarioH.ID_mpH }}" class="form-control" name="ID_mpH">
                            </div>
                            <div class="form-group">
                                <label>Nombre de materia prima: </label>
                                <input type="text" value="{{ inventarioH.Nom_mpH }}" class="form-control" name="Nom_mpH" autofocus>
                            </div>
                            <div class="form-group">
                                <label>Descripci√≥n de materia prima: </label>
                                <textarea name="Desc_mpH" rows="2" class="form-control"> {{ inventarioH.Desc_mpH }} </textarea>
                            </div>
                            <div class="form-group">
                                <label>Tipo de Medidas</label>
                                <!--<input type="number" value="{{ mp.Medida_materiaPrima }}" class="form-control" name="Medida_materiaPrima">-->
                                <select onchange="getSelectValueTIH()" class="custom-select" id="listTIH">
                                        <option value=""> Selecciona el tipo de medida...</option>
                                        <option value="area">Area</option><!--Kilometros, Metros, Millas, Yarda, Pies: CUADRADOS-->
                                        <option value="longitud">Longitud</option><!--Kilometro, Metro, Centimetro, Milimetro, etc-->
                                        <option value="masa">Masa</option><!--Tonelada, Kilogramo, Gramo, Miligramo, etc-->
                                        <option value="volumen">Volumen</option><!--Litro, Mililitro-->
                                </select>
                            </div>
                            <div class="form-group" id="formMIH">
                                <label>Medida</label>
                                <!--<input type="number" value="{{ mp.Medida_materiaPrima }}" class="form-control" name="Medida_materiaPrima">-->
                                <input disabled class="form-control" id="inputBlock" placeholder="Selecciona El tipo de medida">
                            </div>
                            <div class="form-group">
                                <label>Cantidad: </label>
                                <input type="number" value="{{ inventarioH.Cant_mpH }}" class="form-control" name="Cant_mpH">
                            </div>
                            <!--QUITAR-->
                            <div class="form-group">
                                <label>Stock: </label>
                                <input type="number" value="{{ inventarioH.StockH }}" class="form-control" name="StockH">
                            </div>
                            <div class="form-group">
                                <label>Estatus: </label>
                                <input type="text" value="{{ inventarioH.EstatusH }}" class="form-control" name="EstatusH">
                            </div>
                             <div class="form-group">
                                <label>ID Entrada: </label>
                                <input type="number" disabled value="{{ inventarioH.ID_entradaH }}" class="form-control" name="ID_entradaH">
                            </div>
                            <!--QUITAR-->
                            <div class="form-group">
                                <button class="btn btn-dark btn-block">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

